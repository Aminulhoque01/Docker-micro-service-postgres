{
  "services": {
    "product": {
      "url": "http://localhost:4002",
      "routes": [
        {
          "path": "/product",
          "methods": ["get", "post"],
          "middlewares": ["auth"]
        },
        {
          "path": "/product/:id",
          "methods": ["get"],
          "middlewares": ["auth"]
        }
      ]
    },
    "inventory": {
      "url": "http://localhost:4001",
      "routes": [
        {
          "path": "/inventories/:id",
          "methods": ["put"],
          "middlewares": ["auth"]
        },
        {
          "path": "/inventories/:id/details",
          "methods": ["get"],
          "middlewares": ["auth"]
        }
      ]
    },
    "auth": {
      "url": "http://localhost:4003",
      "routes": [
        {
          "path": "/auth/register",
          "methods": ["post"],
          "middlewares": []
        },
        {
          "path": "/auth/login",
          "methods": ["post"],
          "middlewares": []
        },
        {
          "path": "/auth/verify-email",
          "methods": ["post"],
          "middlewares": []
        },
        {
          "path": "/auth/verify-token",
          "methods": ["post"],
          "middlewares": []
        }
      ]
    },
    "user": {
      "url": "http://localhost:4004",
      "routes": [
        {
          "path": "/users/:id",
          "methods": ["get"],
          "middlewares": ["auth"]
        }
      ]
    }
  }
}
